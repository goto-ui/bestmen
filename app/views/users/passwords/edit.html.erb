<% provide(:title, "新しいパスワード") %>

<div class="ramen-background2">
<div class="container">
  <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <div class="form-signin">
              <h1 class="card-title text-center page-title">新しいパスワード</h1>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>
                <div class="form-label-group">
                  <%= f.label :password, "新しいパスワード" %><br />
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>文字以上)</em><br />
                  <% end %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
                </div>
                <div class="form-label-group">
                  <%= f.label :password_confirmation, "新しいパスワード(再入力)" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off" %>
                </div>
                <div class="actions">
                  <%= f.submit "パスワードを再設定する", class: "btn btn-primary jelly" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>