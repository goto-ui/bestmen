<div class="container">
  <!-- .grid-indexでCards全体をネストする -->
  <div class="grid-index">
    <!-- ウインドウサイズごとにグリッドサイズを定義。スマホだと横に1つ、タブレットだと2つ、PCだと3つ並べる -->
    <div class="grid-sizer col-12 col-sm-6 col-lg-4"></div>
    
    <div class="card-group">
      <% @pics.each do |pic| %>
        <div class="grid-item col-12 col-sm-6 col-lg-4">
          <div class="card text-center">
            <div class="card-block">
              <div class="card-img-top">
                <%= link_to image_tag(pic.image.url(:medium)), pic %>
              </div>
              <div class="card-title">
                <h5><%= link_to pic.title, pic %></h5>
                <%= link_to pic.tag_list, pics_path(tag_name: pic.tag_list) %>
              </div>
              <div class="card-text">
                <%= pic.description %>
              </div>
              <div class="card-footer">
                <div class="row">
                  <div class="col-md-6">
                    <p><%= link_to pic.user.name, user_path(pic.user) %>さん</br>のベストメン</p>
                  </div>
                  <div class="col-md-6">
                    <div class="btn-group pull-right">
                      <div class="btn btn-default">
                        <%= render partial: 'pics/like', locals: { pic: pic} %>
                      </div>
                      <% if user_signed_in? %>
                        <div class="btn btn-info"><%= link_to "編集", edit_pic_path(pic) %></div>
                        <div class="btn btn-danger"><%= link_to "削除", pic_path(pic), method: :delete, data: {confirm: "一度削除した投稿は復元できません。よろしいですか？"} %></div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>