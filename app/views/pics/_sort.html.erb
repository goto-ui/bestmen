  <div class="ramen-sort-category"><%= link_to "塩",       pics_path(tag_name: "塩") %></div>
  <div class="ramen-sort-category"><%= link_to "味噌",     pics_path(tag_name: "味噌") %></div>
  <div class="ramen-sort-category"><%= link_to "豚骨",     pics_path(tag_name: "豚骨") %></div>
  <div class="ramen-sort-category"><%= link_to "担々麺",   pics_path(tag_name: "担々麺") %></div>
