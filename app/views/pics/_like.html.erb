<% if current_user %>
  <% if current_user.liked? pic %>
    <%= link_to unlike_pic_path(pic), method: :put, remote: true, id: "like_#{pic.id}" do %>
      <i class="fas fa-heart likes"><%= pic.get_likes.size %></i>
    <% end %>
  <% else %>
    <%= link_to like_pic_path(pic), method: :put, remote: true, id: "like_#{pic.id}" do %>
      <i class="far fa-heart likes"><%= pic.get_likes.size %></i>
    <% end %>
  <% end %>
<% else %>
  <i class="far fa-heart likes"><%= pic.get_likes.size %></i>
<% end %>