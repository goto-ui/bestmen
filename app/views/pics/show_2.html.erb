<div class="articleWrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="article-main">
                    <div class="article-header">
                        <div class="articleAuthor">
                            <div class="articleAuthor-profile">
                                <%= link_to @pic.user.name, @pic.user, class: 'article-user-name' %>
                            </div>
                            <div class="article-updated">
                                <%= @pic.updated_at.strftime('%Y年%m月%d日') %>
                            </div>
                            <% if user_signed_in? %>
                                    <div class="article-settings">
                                        <%= link_to '編集する', edit_pic_path %>
                                        <%= link_to '削除する', pic_path, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %>
                                    </div>
                            <% end %>
                        </div>
                        <h1 class="header-title"> <%= @pic.title %> </h1>
                    </div>
                    <%= render partial: 'pics/like', locals: { pic: @pic} %>
                    <section class="articleContent">
                        <div class="articlePicture"></div>
                          <%= image_tag(@pic.image.url(:medium), class: 'd-block w-100') %>
                        <div class="articleContent_story">
                            <%= @pic.description %>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="commentsWrapper">
        <div class="comment-main">
            <%= render partial: 'comments/index', locals: { comments: @comments } %>
            <% if user_signed_in? %>
                <%= render partial: 'comments/form', locals: { comment: @comment, pic: @picCommen } %>
            <% else %>
                <div class="anonymousForm">
                    <div class="anonymousForm_lead">
                        あなたもコメントしてみませんか
                    </div>
                    <%= link_to '登録', signup_path, class: 'btn btn-default' %>
                    <div class="anonymousForm_sub">
                        すでにアカウントをお持ちの方は<%= link_to 'ログイン', login_path %>
                    </div>

                </div>
            <% end %>
        </div>
    </div>
</div>